<div class="row">
    <div class="col-md-12">
        <h2>Posts
            <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        </h2>
        <hr />

        <p>
        <table>
            <tr>
                <th width="85">Post ID</th>
                <th width="250">Title</th>
                <th width="100">Post Date</th>
                <th width="80">Category</th>
                <th width="100">Published</th>
            </tr>

            {{#each posts}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td><a href="/posts?category={{category}}">{{category}}<a></td>
                <td><a href="/post/delete/{{this.id}}" class="btn btn-danger pull-right">Remove</a></td>
                <td>{{published}}</td>
            </tr>
            {{else}}
            <tr>No data available</tr>
            {{/each}}
        </table>
        </p>

    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>

    {{/unless}}
</div>